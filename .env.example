# .env.example - Backend Environment Variables Template

# Server Configuration
PORT=5001

# Database
MONGO_URI=mongodb://localhost:27017/ride-deck
# For production use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ride-deck?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Frontend URL for CORS (used in production)
FRONTEND_URL=http://localhost:5173
# For Netlify production:
# FRONTEND_URL=https://ride-deck-frontend.netlify.app

# Environment
NODE_ENV=development
# For production:
# NODE_ENV=production
